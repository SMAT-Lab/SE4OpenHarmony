import b64 from 'base64-js'
import { describe, it, expect } from '@ohos/hypium'

export default function corruptTest() {
  describe('corruptTest', ()=> {
    it('padding_bytes_found_inside_base64_string', 0, ()=> {
      // See https://github.com/beatgammit/base64-js/issues/42
      const str = 'SQ==QU0='
      expect(b64.toByteArray(str)).assertDeepEquals(new Uint8Array([73]))
      expect(b64.byteLength(str)).assertEqual(1)
    })
  })
}
