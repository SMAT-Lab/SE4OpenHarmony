                    desc="hvigor配置文件，DevEco Studio自动生成，不手动修改"
                    name="hvigor/hvigor-config.json5"
                    type="filepath"/>
                <filteritem
                    desc="hvigor配置文件，DevEco Studio自动生成，不手动修改"
                    name="hvigor/hvigor-wrapper.js"
                    type="filepath"/>
